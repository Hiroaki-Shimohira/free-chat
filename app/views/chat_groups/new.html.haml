.chat-group-form
  %h1 新規チャットグループ
  = form_for @chat_group, class: "new_chat_group", id: "new_chat_group" do |f|
    - if @chat_group.errors.any?
      .chat-group-form__errors
        %h2
          = "#{@chat_group.errors.count}件のエラーがあります。"
        %ul
          - @chat_group.errors.full_messages.each do |msg|
            %li
              = msg
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name,"グループ名" , class: "chat-group-form__label"
      .chat-group-form__field--right
        = f.text_field :name , placeholder:"グループ名を入力してください" , class: "chat-group-form__input", id: "chat_group_name"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name,"チャットメンバーを追加" , class: "chat-group-form__label"
      .chat-group-form__field--right
        = f.collection_check_boxes(:user_ids, User.all, :id, :name , include_hidden: false) do |b|
          = b.label { b.check_box + b.text}
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form__action-btn", data:{disable_with: "Save"}
